<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium"
    android:background="?android:selectableItemBackground"
    android:clickable="true">

    <ImageView
        android:id="@+id/item_artist_cover"
        android:layout_width="@dimen/small_cover_width"
        android:layout_height="@dimen/small_cover_height"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_cover_height">

        <TextView
            android:id="@+id/item_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            style="@android:style/TextAppearance.Material.Large"
            android:maxLines="2"
            android:fontFamily="sans-serif-condensed"/>

        <TextView
            android:id="@+id/item_artist_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="genres"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_artist_albums_songs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="albums, songs"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/margin_small"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>