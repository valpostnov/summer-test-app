<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.postnov.android.summerschoolapp.ui.activity.DetailsActivity"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/detail_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_medium"
        android:transitionName="@string/image_shared_element"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="genres"
                android:layout_marginEnd="@dimen/margin_medium"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/detail_albums_songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="albums"
                android:layout_marginRight="@dimen/margin_medium"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/margin_medium" />

            <TextView
                android:id="@+id/detail_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Биография"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                style="@android:style/TextAppearance.Material.Large" />
            <TextView
                android:id="@+id/detail_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="description"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                style="@android:style/TextAppearance.Medium"
                android:lineSpacingMultiplier="1.2"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>